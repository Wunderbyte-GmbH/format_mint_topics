<style>
    #forumpost .discussion-nav + div, #forumpost .discussion-nav {
        display: none !important;
        list-style: none !important;
    }

    #forumpost > div > div {
        display: none !important;
    }

    #forumcontainer {
        padding-left: 2px;
        padding-right: 2px;
        margin-top: 1rem;
        margin-bottom: 0.5rem;
    }

    #forumcontainer .forumpost {
        border: 1px solid #d0cdcd;
        border-radius: 5px;
        box-shadow: 2px 2px 6px #c4c0c0;
    }

    #coursecontentcollapse0 .container {
        padding-left: 0px;
        padding-right: 0px;
    }

    .ftopics-0 ul {
        webkit-margin-start: 0rem !important;
    }

    #forumcontainer .forumpost .post-actions a:not(:first-child) {
        display: none;
    }

    #forumcontainer .forumpost .post-actions a:first-child {
        display: block;
        background: #0f6cbf;
        text-align: center;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        line-height: 25px;
    }

    #mint_topicsstartcourse {
        color: white;
        text-decoration: none;
        font-weight: bold;
        line-height: 25px;
    }

    .mint_topics-generatedimage {
        border-radius: 5px;
        min-height: 250px;
    }

    #mint_topicsrating {
        font: normal normal normal 30px/1 FontAwesome;
    }

    .ratingtitle {
        margin-right: 0.5rem;
        font-weight: bold;
        align-self: center;
    }

    #mint_topicscourserating {
        color: darkgoldenrod;
    }

    .mint_topics_summary {
        max-height: 300px;
        overflow: hidden;
        padding: 0.5rem;
    }

    #coursecontentcollapse0 .nolink {
        cursor: default;
        pointer-events: none;
        text-decoration: none;
        margin-bottom: 0.4rem;
    }

    #coursecontentcollapse0 .startcourse {
        margin-top: 1rem;
        margin-bottom: 0.4rem;
    }

    #coursecontentcollapse0 .noforumpost {
        margin-top: 0.8rem;
    }

    .format-mint_topics  #forumcontainer .forumpost .post-actions a:first-child {
     background: var(--primary);
    }
</style>

{{< core_courseformat/local/content/section }}
    {{$ core_courseformat/local/content/section/content }}
        {{> format_mint_topics/local/content/section/content }}
                {{#forumpost}}
        <div id="forumcontainer" class="row justify-content-center">
            <div id="forumpost" class="col">
                {{{forumpost}}}
            </div>
        </div>
    {{/forumpost}}
    {{/ core_courseformat/local/content/section/content }}

{{/ core_courseformat/local/content/section }}

{{#js}}
require(['jquery'], function($) {
$("#forumcontainer .forumpost .post-actions a:first-child").html('Forum post');
});
{{/js}}
